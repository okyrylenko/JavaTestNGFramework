<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="SmokeProd" verbose="1" parallel="tests" thread-count="7" >
    <listeners>
        <listener class-name="Foundation.utils.TestNGListeners"></listener>
    </listeners>
    <parameter name="Env" value="Production"></parameter>

    <!-- Test level-->
    <test name="Prod-Smoke-Chrome" >
        <parameter name="Browser" value="Chrome"/>
        <groups>
            <run>
                <include name="smoke">

                </include>
            </run>
        </groups>
        <classes>
            <class name="LogIn" />
            <class name="LogInFail"></class>
        </classes>
    </test>

    <test name="Prod-Smoke-FireFox" >
        <parameter name="Browser" value="Firefox"></parameter>
        <groups>
            <run>
                <include name="smoke"></include>
            </run>
        </groups>
        <classes>
            <class name="LogIn" />
            <class name="LogInFail"></class>
        </classes>
    </test>
</suite>